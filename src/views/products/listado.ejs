<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LISTADO DE BICIS</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/9440e8cf98.js"
      crossorigin="anonymous"
    ></script>
  </head>
</html>

<body>
  <!--HEADER -->
  <header class="main-header">
    <div class="main-header-top-bar">
      <a href="/"><img src="/img/logo7g.jpg" class="logo" /></a>
      <nav Class="center-navbar">
        
        <a href="#">SERVICIOS</a>
      </nav>
                
     
    
      <nav Class="center-navbar">
        <ul class="center-list">
            <% if(locals.usuario.role===9) { %>
          <li><a href="/products">ADMINISTRAR</a></li> 
          <%}%>        
        </ul>
      </nav>
      <nav Class="right-navbar">
        <ul class="right-list">
          <!-- <li>
            <a href="#"><i class="fa-solid fa-magnifying-glass"></i></a>
          </li>
          <li>
            <a href="/productcart"
              ><i class="fa-sharp fa-solid fa-basket-shopping"></i
            ></a>
          </li> -->
          <li>
            <% if(locals.usuario) { %>  
              <a href="/logout"><%= usuario.name %></i><br>Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i> </i></a>
             
            <% } else { %>  
              <i  class="fas fa-sign-in-alt"><a class='iconologin' href="/login"></i>Iniciar Sesion</a>
                <br>
                <!-- <a href="/register">Registrarse</i></a> -->
            <%}%>  
          </li>
        </ul>
      </nav>
    </div>
  </header>
  <!--CONTENIDO PRINCIPAL -->
     
     <main>
        <section class="bienvenida">
         
        </section>
     <section class="busqueda">
        <h2>TODAS NUESTRAS BICICLETAS</h2>
        <article class="vamosabuscar">
          <% bicis.forEach(bici => { %>
          <div class="producto">
            <a href="/products/detail/<%= bici.id%>"
              ><img src="/img/bicis/<%= bici.image%>"
            /></a>
            <div class="detalle-producto">
              <h4 class="precio">$<%= bici.price%></h4>
              <h4 class="descuentos">%<%= bici.discount%></h4>
              <h3><%= bici.name%></h3>
            </div>
          </div>
          <% }); %>
        </article>
      </section>
      <div class="separacion"></div>
    </main>
    </body>
    </html>