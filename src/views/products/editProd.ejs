<%- include("../partials/head", {tituloWeb: "Editar Producto", cssstyle: "/css/styles.css"})%>
<body>
<!--HEADER -->
<%- include("../partials/header") %> 
<!--CONTENIDO PRINCIPAL -->
<section class="edit-section">
        <form class="form-edit" action="/products/edit/<%= biciEditar.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
          <h2 class="form-title">Formulario de Modificación de Productos</h2>
          <ul class="errores" type="none"></ul>
          <div class="form-container">
            <div class="form-group">
              <input type="text" value="<%= biciEditar.name%>" class="form-input" name='nombreProducto' id='nombreProducto' placeholder=" " />
              <label for="nombreProducto" class="form-label">Nombre del Producto</label>
              <span class="form-line"></span>
              <% if(locals.errors && errors.nombreProducto) { %>
                <p><%= errors.nombreProducto.msg %></p>
            <% } %>
            </div>
            <div class="form-group">
              <input type="text" value="<%= biciEditar.description%>" class="form-input" name="descripcion" id="descripcion" placeholder=" "/>
              <label for="descripcion" class="form-label">Descripción</label>
              <span class="form-line"></span>
              <% if(locals.errors && errors.descripcion) { %>
                <p><%= errors.descripcion.msg %></p>
            <% } %>
            </div>
            <div class="form-group">
              <input type="text"  class="form-input" id="precio" name="precio" placeholder=" " value="<%= biciEditar.price%>"/>
              <label for='precio' class='form-label'>Precio</label>
              <span class="form-line"></span>
            </div>
            <div class="form-group">
              <input type="text" class="form-input" id="descuento" value="<%= biciEditar.discount%>" name="descuento" placeholder=" "/>
              <label for='descuento' class='form-label'>Descuento</label>
              <span class="form-line"></span>
            </div>
            <div class="form-group">
              <input type="text" class="form-input" id="modelo" value="<%= biciEditar.model.name%>" name="model" placeholder=" "/>
              <label for='model' class='form-label'>Modelo</label>
              <span class="form-line"></span>
            </div>
            <div class="form-group">              
            <input type="text" id='talla' value="<%= biciEditar.size.name%>" class="form-input" name="talla" placeholder=" "/>
              <label for='color' class='form-label'>Talla</label>
              <span class="form-line"></span>
            </div>
            <input type="file" name="imagen" id="imagen" >
            <input type="submit" class="form-submit" id="submit-register">
            <input type="reset" class="form-submit" id="reset-register">
          </div>
  </section>
  <script src="/js/productValidation.js"></script>
<!--FOOTER -->
<%- include("../partials/footer") %>